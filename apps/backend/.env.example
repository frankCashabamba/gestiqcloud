# Backend env (desarrollo)
ENV=development
APP_NAME=GestiqCloud

# Frontends served por Nginx en 8081 (admin) y 8082 (tenant)
FRONTEND_URL=http://localhost:8081
CORS_ORIGINS=http://localhost:8081,http://localhost:8082

# JWT HS256 demo
JWT_ALGORITHM=HS256
JWT_SECRET_KEY=devsecretdevsecretdevsecret

# Cookies
SESSION_COOKIE_NAME=sessionid
CSRF_COOKIE_NAME=csrf_token
COOKIE_DOMAIN=

# DB (Postgres en compose)
DATABASE_URL=postgresql://postgres:root@db:5432/gestiqclouddb_dev

# Redis (sesiones en servidor)
#REDIS_URL=redis://localhost:6379/0

FRONTEND_MODULES_PATH=/apps/tenant/src/modules
TENANT_NAMESPACE_UUID=0280249e-6707-40fb-8d60-1e8f3aea0f8e
 
# Rate limiting (recomendado para desarrollo)
LOGIN_MAX_ATTEMPTS=10
LOGIN_COOLDOWN_SECONDS=900
LOGIN_WINDOW_SECONDS=900
LOGIN_BACKOFF_BASE=2
LOGIN_BACKOFF_STEP=2
EMAIL_HOST=''
EMAIL_HOST_USER=''
EMAIL_HOST_PASSWORD=''
EMAIL_PORT='587'
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
DEFAULT_FROM_EMAIL="GestiqCloud <no-reply@gestiqcloud.com>"

# Optional modules toggles
# Enable imports module only when ready
IMPORTS_ENABLED=0
# Base para enlaces de set-password/reset enviados por email
# Si no se define, usa FRONTEND_URL
PASSWORD_RESET_URL_BASE=''

# Habilita endpoint de prueba de email en producci√≥n (desactivado por defecto)
EMAIL_TEST_ENDPOINT_ENABLED=False
