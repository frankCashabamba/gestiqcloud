{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable", "WebWorker"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client", "react", "react-dom"],

    "baseUrl": ".",
    "paths": {
      "@ui": ["../packages/ui/src"],
      "@ui/*": ["../packages/ui/src/*"],
      "@shared": ["../packages/shared/src"],
      "@shared/*": ["../packages/shared/src/*"],
      "@assets": ["../packages/assets"],
      "@assets/*": ["../packages/assets/*"],
      "@pwa": ["../packages/pwa/src"],
      "@pwa/*": ["../packages/pwa/src/*"],
      "@shared/http": ["../packages/http-core/src"],
      "@shared/http/*": ["../packages/http-core/src/*"],
      "@shared/endpoints": ["../packages/endpoints/src"],
      "@shared/endpoints/*": ["../packages/endpoints/src/*"],
      "@shared/ui": ["../packages/ui/src"],
      "@shared/ui/*": ["../packages/ui/src/*"],
      "@shared/domain": ["../packages/domain/src"],
      "@shared/domain/*": ["../packages/domain/src/*"],
      "@shared/auth-core": ["../packages/auth-core/src"],
      "@shared/auth-core/*": ["../packages/auth-core/src/*"],
      "@shared/utils": ["../packages/utils/src"],
      "@shared/utils/*": ["../packages/utils/src/*"],
      "@shared/telemetry": ["../packages/telemetry/src"],
      "@shared/telemetry/*": ["../packages/telemetry/src/*"],

      "react": ["./node_modules/@types/react/index.d.ts"],
      "react/*": ["./node_modules/@types/react/*"],
      "react-dom": ["./node_modules/@types/react-dom/index.d.ts"],
      "react-dom/*": ["./node_modules/@types/react-dom/*"],
      "react/jsx-runtime": ["./node_modules/@types/react/jsx-runtime.d.ts"],
      "axios": ["./node_modules/axios/index.d.ts"],
      "react-router-dom": ["./node_modules/react-router-dom/dist/index.d.ts"],
      "react-router-dom/*": ["./node_modules/react-router-dom/dist/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
